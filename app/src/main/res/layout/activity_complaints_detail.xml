<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="main.sheet.complaints.ComplaintsDetailActivity">

    <main.utils.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="@string/complaints"
        app:header_is_right_tv_visiable="true"
        app:header_title_right="@string/feedback">
    </main.utils.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:textColor="@color/xiaohei"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/ziti"
                    android:gravity="center"/>
            </LinearLayout>
            <View style="@style/HourLine"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra ="7dp"
                android:padding ="10dp"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="反馈"
                android:gravity="center_vertical"
                android:textSize="17dp"
                android:background="@color/shouye"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/tvBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra ="7dp"
                android:padding ="10dp"
                android:textSize="16dp"/>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="评价"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:background="@color/shouye"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/tvPJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra ="7dp"
                    android:padding ="10dp"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
