<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/view_circlecorner_white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:gravity="center_vertical"
          >
          <TextView
              android:id="@+id/id_line_name_tv"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="H28-2"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="17dip"/>
          <TextView
              android:id="@+id/id_carno_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="A12032D"
              android:gravity="center"
              android:textColor="@color/grey"
              android:background="@drawable/view_backgroud_border_gray"
              android:textSize="16dip"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"

              />
          <TextView
              android:id="@+id/id_mark_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16dip"
              android:textColor="@color/rb_select"
              android:text="待出行"
              android:layout_weight="1"
              android:textAlignment="textEnd"
             />
      </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         >
         <LinearLayout
             android:id="@+id/id_onbus_date_layout"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@color/white"
            android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:gravity="center_vertical"
             >
             <ImageView
                 android:layout_width="18dp"
                 android:layout_height="18dp"
                 android:background="@drawable/icon_history_address"/>

             <TextView
                 android:id="@+id/id_date_peoplenum_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignTop="@+id/id_onbus_date_layout"
                 android:layout_alignEnd="@+id/id_onbus_date_layout"
                 android:layout_marginLeft="2dp"
                 android:text="2019年08月05日       1人乘坐"
                 android:textSize="14dip" />
         </LinearLayout>
         <TextView
             android:id="@+id/id_onbus_time"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/id_onbus_station"
             android:layout_alignBottom="@+id/id_onbus_station"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="13dip"
             android:gravity="center_vertical"
             android:text="          "/>
         <LinearLayout
             android:id="@+id/id_onbus_icon_linearlayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/id_onbus_time"
             android:layout_alignTop="@id/id_onbus_station"
             android:layout_alignBottom="@id/id_onbus_station"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:gravity="center">
             <ImageView
                 android:id="@+id/id_onbus_icon"
                 android:layout_width="6dp"
                 android:layout_height="6dp"
                android:background="@drawable/view_circle_green"
                 />
         </LinearLayout>
         <TextView
             android:id="@+id/id_onbus_station"
             android:layout_below="@+id/id_onbus_date_layout"
             android:layout_toRightOf="@+id/id_onbus_icon_linearlayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="13dp"
             android:text="灵宝高级技工学校"/>
         <View
             android:id="@+id/id_line"
             android:layout_below="@+id/id_onbus_icon_linearlayout"
             android:layout_alignLeft="@+id/id_onbus_icon_linearlayout"
             android:layout_width="1dp"
             android:layout_height="7dp"
             android:background="@color/gray"
             android:layout_marginBottom="0dp"
             android:layout_marginTop="0dp"
             android:layout_marginLeft="2.5dp"></View>
         <TextView
             android:id="@+id/id_offbus_time"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/id_offbus_station"
             android:layout_alignBottom="@+id/id_offbus_station"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="13dip"
             android:gravity="center_vertical"
             android:text="          "/>
         <LinearLayout
             android:id="@+id/id_offbus_icon_linearlayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/id_offbus_time"
             android:layout_alignTop="@id/id_offbus_station"
             android:layout_alignBottom="@id/id_offbus_station"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:gravity="center">
             <ImageView
                 android:id="@+id/id_offbus_icon"
                 android:layout_width="6dp"
                 android:layout_height="6dp"
                 android:background="@drawable/view_circle_red"
                 />
         </LinearLayout>

         <TextView
             android:id="@+id/id_offbus_station"
             android:layout_below="@+id/id_line"
             android:layout_toRightOf="@+id/id_offbus_icon_linearlayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="13dp"

             android:text="灵宝高级技工学校"/>

         <Button
             android:id="@+id/id_rbt_buyagain"
             android:layout_alignParentRight="true"
             android:layout_width="80dp"
             android:layout_height="30dp"

             android:layout_alignTop="@+id/id_onbus_date_layout"
             android:textSize="13dp"
             android:textColor="@color/white"
             android:background="@drawable/button_circlecorner"
             android:visibility="invisible"
             android:text="再次购票"/>
     </RelativeLayout>

</LinearLayout>