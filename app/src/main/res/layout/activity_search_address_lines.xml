<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <main.utils.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="线路列表">
    </main.utils.views.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_circlecorner_white"
        android:paddingLeft="15dp">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">
          <LinearLayout
              android:id="@+id/id_setout_linearlayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              >
              <View
                  android:layout_width="6dp"
                  android:layout_height="6dp"
                  android:background="@drawable/view_circle_green">
              </View>
              <TextView
                  android:id="@+id/id_setout_textview"
                  android:layout_marginLeft="10dp"
                  style="@style/EditText"
                  android:textSize="16dp"
                  android:textColor="@color/black"
                  android:text="我的位置(灵宝高级技工学校)"

                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="20dp"
              android:background="@color/lineGray"></LinearLayout>
          <LinearLayout
              android:id="@+id/id_end_linearlayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              >
              <View
                  android:layout_width="6dp"
                  android:layout_height="6dp"
                  android:background="@drawable/view_circle_red">
              </View>
              <TextView
                  android:id="@+id/id_end_textview"
                  android:layout_marginLeft="10dp"
                  style="@style/EditText"
                  android:textSize="16dp"
                  android:textColor="@color/black"
                  android:hint="请选择目的地"
                  />
          </LinearLayout>
      </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/id_switch_address_btn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_qiehuan"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/recyclerViewBackgroundColor">
        <com.example.refreshview.CustomRefreshView
            android:id="@+id/id_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recyclerViewBackgroundColor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
          ></com.example.refreshview.CustomRefreshView>
        <LinearLayout
            android:id="@+id/id_nodata_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recyclerViewBackgroundColor"
            android:visibility="visible"
            android:padding="15dp"
           >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@drawable/view_circlecorner_white"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lyf_icon_noline"
                   />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="很抱歉，附近暂无合适的定制公交线路"
                    android:textColor="@color/textGray"
                    android:textSize="13dip"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="快去发起定制需求开通专属线路吧！"
                    android:textSize="15dip"
                    />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>