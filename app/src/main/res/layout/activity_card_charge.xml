                android:digits="1234567890"
                android:gravity="center"
                android:hint="@string/zidinyi"
                android:maxLength="3"
                android:textColor="@drawable/rb_font_selector"
                android:textSize="@dimen/activity_card_charge_tv"
                android:visibility="gone"/>
