<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="80dp">
    <TextView
        android:id="@+id/id_tick_num_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/view_circlecorner_blue"
        android:text="1张"
        android:textSize="11dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:background="@drawable/view_circlecorner_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_bg_selected"
            android:textSize="10dp"
            android:text="2019"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_bg_selected"
            android:textSize="13dp"
            android:text="08/05"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textColor="@color/color_bg_selected"
            android:textSize="10dp"
            android:text="星期一"/>


    </LinearLayout>
    <TextView
        android:layout_width="4dp"
        android:layout_height="8dp"
        android:layout_below="@+id/id_tick_num_tv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-4dp"
        android:background="@drawable/view_circle_recycleview_bg_right"/>
    <TextView
        android:layout_width="4dp"
        android:layout_height="8dp"
        android:layout_below="@+id/id_tick_num_tv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-4dp"
        android:background="@drawable/view_circle_recycleview_bg_left"/>
</RelativeLayout>
