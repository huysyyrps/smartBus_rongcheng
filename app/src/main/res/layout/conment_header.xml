<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_selected"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_left"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:padding="6dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_bg_selected">
            <EditText
                android:id="@+id/etQuery"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/write_line"
                android:textSize="14dp"
                android:paddingLeft="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/linearlayout_nocolore_radius"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/query"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/ivClern"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/delert"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="30dip" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>