<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="60.0dip">
         <ImageView android:id="@+id/arrow"
            android:visibility="gone" 
            android:layout_width="28.0dip" 
            android:layout_height="28.0dip" 
            android:layout_marginRight="16.0dip" 
            android:src="@drawable/ic_arrow2" 
            android:scaleType="fitCenter" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/notice_title_text"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_toLeftOf="@+id/arrow"
            android:singleLine="true"
            android:text="线路调整"
            android:textColor="@color/black_text"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/notice_time_text"
            android:layout_marginBottom="5dip"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_alignLeft="@+id/notice_title_text"
            android:layout_below="@+id/notice_title_text"
            android:singleLine="true"
            android:text="2016-04-01 08:00:00"
            android:textSize="15.0sp" 
            android:textColor="@color/gray_text"/>

    </RelativeLayout>
</LinearLayout>