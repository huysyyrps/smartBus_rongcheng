<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bus_line_search_view"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@color/color_bg_selected"
        android:gravity="center"
        android:padding="4.0dip" >

        <include
            android:id="@+id/bus_line_input"
            layout="@layout/search_box" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/shouye"
        android:padding="4.0dip"
        android:text="最近搜索"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_bg_selected"
        android:textSize="14.0sp" />

    <ListView
        android:id="@+id/bus_line_history_list"
        style="@style/list_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" />

</LinearLayout>