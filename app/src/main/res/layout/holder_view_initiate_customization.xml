<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recyclerViewBackgroundColor"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/initiate_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/view_circlecorner_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/id_setout_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <View
                android:layout_marginLeft="5dp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/view_circle_green"></View>

            <TextView
                android:id="@+id/id_setout_textview"
                style="@style/EditText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="请选择出发地"

                android:textColor="@color/black"

                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineGray"
            android:layout_marginLeft="20dp"></LinearLayout>

        <LinearLayout
            android:id="@+id/id_end_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <View
                android:layout_marginLeft="5dp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/view_circle_red"></View>
            <TextView
                android:id="@+id/id_end_textview"
                style="@style/EditText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="请选择目的地"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineGray"
            android:layout_marginLeft="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_history_address"/>

            <TextView
                android:id="@+id/id_setout_time_textview"
                style="@style/EditText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="请选择上车时间"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>
        <Button
            android:id="@+id/id_submit_button"
           style="@style/Button2"
            android:layout_marginTop="20dp"
            android:text="发起定制需求"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center"
               android:textSize="13dip"
                android:text="?"
                android:textColor="@color/white"
                android:background="@drawable/view_circle_blue"/>

            <TextView
                android:id="@+id/id_dingzhi_guize"
                style="@style/EditText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="定制规则"
                android:textColor="@color/rb_select"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
