<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/shouye"
    tools:context="main.sheet.advert.AdvertListActivity">

    <main.utils.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="@string/notice">
    </main.utils.views.Header>

    <include
        android:id="@+id/liContent1"
        layout="@layout/no_content"
        android:visibility="gone">
    </include>

    <com.example.refreshview.CustomRefreshView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
    </com.example.refreshview.CustomRefreshView>

</LinearLayout>
